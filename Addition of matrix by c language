#include <stdio.h>


int main()
{
    int a[3][3]={{1,2,5},{3,4,4},{9,8,7}};
    int b[3][3]={{5,6,7},{7,8,2},{6,5,4}};
    int c[3][3];
    printf("Matrix a:\n");
     for (int i=0;i<3;i++)
     {
         for (int j=0;j<3;j++)
         {
             printf("%d\t",a[i][j]);
         }
         printf("\n");

     }
      printf(" Matrix b:\n");
     for (int i=0;i<3;i++)
     {
         for (int j=0;j<3;j++)
         {
             printf("%d\t",b[i][j]);
         }
         printf("\n");

     }

     for (int i=0;i<3;i++)
     {
         for (int j=0;j<3;j++)
         {
            c[i][j]=a[i][j]+b[i][j];
         }
         printf("\n");

     }
     printf("sum of the matrix\n");
      for (int i=0;i<3;i++)
     {
         for (int j=0;j<3;j++)
         {
             printf("%d\t",c[i][j]);
         }
         printf("\n");

      }

}
